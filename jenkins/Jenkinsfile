pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'mvn -B -DskipTests clean package'
                echo "Build completed"
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
                echo "Test is completed"
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Deliver') {
            steps {
                echo "Completed"
            }
        }
    }
}
